<div class="row">
  <div class="car-wash-details col-6">
      <div class="car-wash-name">

        <h1><%= @car_wash.name %></h1>
      </div>
      <div class="show-image">
        <img src="https://images.unsplash.com/photo-1607860108855-64acf2078ed9?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Car Wash Image">
      </div>
    <div class="location-show">
      <p><strong>üìçLocation:</strong> <%= @car_wash.location %></p>
      </div>
      <div class="description">
      <p><%= @car_wash.description %></p>
      </div>
      <div class="price-list">
        <p><strong>Price for Sedan:</strong> <%= number_to_currency(@car_wash.price_sedan) %></p>
        <p><strong>Price for SUV:</strong> <%= number_to_currency(@car_wash.price_suv) %></p>
        <p><strong>Price for Truck:</strong> <%= number_to_currency(@car_wash.price_truck) %></p>
        <p><strong>Price for Luxury:</strong> <%= number_to_currency(@car_wash.price_luxury) %></p>
        </div>
    <div class="buttons-show">

      <%= link_to "Back", car_washes_path, class: "btn btn-primary" %>
      <div class= "buttons-side-by-side mt-4">
        <%= link_to "Edit", edit_car_wash_path, class: "btn btn-secondary" %>
      <%= button_to "Delete", @car_wash, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
    </div>


  </div>
  <div class="col-6">
    <h1 class="mt-4">Your Appointment</h1>

    <%= simple_form_for([@car_wash, @appointment]) do |form| %>
      <%= form.input :date, label: 'date' %>
      <%= form.input :car, include_blank: false, collection: Car.where(user_id: current_user.id), label_method: lambda { |car| "#{car.brand} - #{car.year} - #{car.car_type}" }%>
      <%= form.button :submit, 'Create appointment', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>
</div>
